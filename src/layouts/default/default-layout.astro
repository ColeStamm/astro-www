---
export type { Props } from '@astropub/doc'

import { Document, Props } from '@astropub/doc'
import SiteSkipTo from 'project:components/site-skipto/site-skipto.astro'

import './style/sanitize.css'
import './style/variables.css'
import './style/utilities.css'
import './style/custom-element-display.css'
import './style/root.css'

const props = {
	title: 'Astro',
	tabtitle: 'Astro UXDS',

	type: 'website',
	description: 'The Astro Space UX Design System enables developers & designers to build rich space app experiences with established interaction patterns & best practices.',

	imageurl: '/images/astro-card.jpg',
	imagealt: 'Astro Space UX Design System 7.0 beta',

	icon: '/favicon.svg',
	touchicon: '/apple-touch-icon.png',

	url: Astro.url.href,

	lang: 'en-US',

	robots: 'noindex,nofollow',

	...Astro.props,
} as Props
---
<Document class="p-root" body-class="p-body" {...props}>
	<SiteSkipTo />
	<slot />
</Document>